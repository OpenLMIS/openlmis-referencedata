{
  "type": "object",
  "$schema": "http://json-schema.org/draft-03/schema",
  "title": "Role",
  "description": "A single role",
  "properties": {
    "id": {
      "type": "string",
      "title": "id"
    },
    "name": {
      "type": "string",
      "title": "name",
      "required": true
    },
    "description": {
      "type": "string",
      "title": "description"
    },
    "rights": {
      "type": "array",
      "title": "rights",
      "items": {
        "type": "object",
        "$ref": "right.json"
      },
      "uniqueItems": false,
      "required": true
    }
  }
}
